<% layout('layouts/boilerplate') %>
<body class="bg-light">

  <div class="container mt-5">
    <h3 class="mb-4 text-center fw-bold">Listing Details</h3>

    <div class="card shadow-lg border-0 rounded-4" style="max-width: 650px; margin: auto;">
      <!-- Image -->
      <img src="<%= listing.image && listing.image.url ? listing.image.url : '/images/default.jpg' %>" 
           class="card-img-top rounded-top" 
           alt="<%= listing.title %>"
           style="height: 260px; object-fit: cover;">

      <div class="card-body p-4">
        <!-- Title -->
        <h5 class="card-title fw-bold mb-2"><%= listing.title %></h5>
        
        <!-- Description -->
        <p class="card-text text-muted mb-3"><%= listing.description %></p>

        <!-- Price -->
        <p class="h6 fw-semibold text-success mb-3">
          â‚¹ <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
        </p>

        <!-- Location -->
        <p class="mb-1"><i class="bi bi-geo-alt-fill text-danger"></i> <%= listing.location %></p>
        <p class="text-secondary mb-3"><%= listing.country %></p>

        <!-- Buttons -->
        <div class="d-flex gap-3 mt-4">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger px-4">Edit</a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark px-4" type="submit">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap Icons CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</body>
